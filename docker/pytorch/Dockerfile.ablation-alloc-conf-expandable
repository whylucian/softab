# Controlled Ablation: PYTORCH_HIP_ALLOC_CONF - expandable_segments:True
# Base: Fedora ROCm + Official PyTorch rocm6.2
# Only variable: PYTORCH_HIP_ALLOC_CONF="expandable_segments:True"
#
# Compare with: alloc-conf-baseline, alloc-conf-native, alloc-conf-combined

ARG FEDORA_VERSION=43
FROM fedora:${FEDORA_VERSION}

LABEL maintainer="softab"
LABEL description="PyTorch alloc-conf ablation - expandable_segments:True"
LABEL ablation.type="controlled"
LABEL ablation.variable="PYTORCH_HIP_ALLOC_CONF"
LABEL ablation.value="expandable"
LABEL ablation.pair="alloc-conf-ablation"

ARG GFX_TARGET=gfx1151

ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

RUN dnf -y update && dnf -y install \
    python3.12 python3.12-devel \
    rocm-hip-devel rocblas-devel hipblas-devel hipblaslt-devel \
    rocminfo rocm-smi hipcc libatomic \
    gcc gcc-c++ cmake ninja-build bc jq htop wget \
    && dnf clean all && python3.12 -m ensurepip --upgrade

RUN python3.12 -m pip install --upgrade pip numpy && \
    python3.12 -m pip install --index-url https://download.pytorch.org/whl/rocm6.2 \
    torch torchvision torchaudio

# Fixed environment (all other variables constant)
ENV HSA_ENABLE_SDMA=0
ENV TORCH_ROCM_AOTRITON_ENABLE_EXPERIMENTAL=1
ENV HIP_VISIBLE_DEVICES=0
ENV HSA_OVERRIDE_GFX_VERSION=11.0.0
ENV ROCBLAS_USE_HIPBLASLT=1

# ABLATION VARIABLE: expandable_segments:True
ENV PYTORCH_HIP_ALLOC_CONF="expandable_segments:True"

WORKDIR /workspace

COPY <<'EOF' /usr/local/bin/bench-pytorch
#!/usr/bin/env python3.12
import torch, time, json, os, sys

results = {
    "image": "pytorch-ablation-alloc-conf-expandable",
    "pytorch_version": torch.__version__,
    "rocm_version": str(torch.version.hip),
    "ablation_type": "controlled",
    "ablation_variable": "PYTORCH_HIP_ALLOC_CONF",
    "ablation_value": "expandable",
    "device": None,
    "status": "unknown",
    "benchmarks": {},
    "env": {
        "HSA_ENABLE_SDMA": os.environ.get("HSA_ENABLE_SDMA", "unset"),
        "ROCBLAS_USE_HIPBLASLT": os.environ.get("ROCBLAS_USE_HIPBLASLT", "unset"),
        "HSA_OVERRIDE_GFX_VERSION": os.environ.get("HSA_OVERRIDE_GFX_VERSION", "unset"),
        "PYTORCH_HIP_ALLOC_CONF": os.environ.get("PYTORCH_HIP_ALLOC_CONF", "unset")
    }
}

if not torch.cuda.is_available():
    results["status"] = "FAIL"
    results["error"] = "CUDA not available"
    print(json.dumps(results, indent=2))
    sys.exit(1)

results["device"] = torch.cuda.get_device_name(0)

try:
    # Warmup
    x = torch.randn(2048, 2048, device='cuda', dtype=torch.float16)
    for _ in range(10): _ = torch.mm(x, x)
    torch.cuda.synchronize()

    # Benchmark
    for size in [2048, 4096, 8192]:
        a = torch.randn(size, size, device='cuda', dtype=torch.float16)
        b = torch.randn(size, size, device='cuda', dtype=torch.float16)
        torch.cuda.synchronize()

        times = []
        for _ in range(20):
            start = time.perf_counter()
            c = torch.mm(a, b)
            torch.cuda.synchronize()
            times.append(time.perf_counter() - start)

        elapsed = min(times)
        tflops = (2 * size**3 / elapsed) / 1e12
        results["benchmarks"][f"matmul_{size}"] = {
            "tflops": round(tflops, 2),
            "time_ms": round(elapsed*1000, 3)
        }

    results["peak_tflops"] = max(v["tflops"] for v in results["benchmarks"].values())
    results["status"] = "SUCCESS"

except Exception as e:
    results["status"] = "FAIL"
    results["error"] = str(e)
    import traceback
    results["traceback"] = traceback.format_exc()

print(json.dumps(results, indent=2))
EOF
RUN chmod +x /usr/local/bin/bench-pytorch

CMD ["bench-pytorch"]
